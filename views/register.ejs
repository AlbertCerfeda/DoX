<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DoX - Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style type="text/css">
        @import url("/css/common.css");
        @import url("/css/login_register.css");
    </style>
</head>
<body class="text-center">
<main class="login-form">
    <svg id="logo" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 595.06 133.62"><defs><style>.cls-1{font-size:175px;font-family:jumper_XBdIt, Jumper;font-weight:700;font-style:italic;}.cls-2{letter-spacing:-0.01em;}</style></defs><text class="cls-1" transform="translate(0 126.81)"><tspan class="cls-2"></tspan><tspan x="102.9" y="0">DoX</tspan></text></svg>

    <form method="post" action="/register">
        <h1 class="h3 mb-3 fw-normal">Please register</h1>
        <p id="pwdMatch" class="alert alert-danger p-1 mb-3" hidden>Passwords don't match</p>
        <div class="form-floating">
            <input class="form-control" type="text" id="username" name="username" placeholder="Username">
            <label for="username">Username</label>
        </div>
        <div class="form-floating">
            <input class="form-control" type="password" oninput="checkPassword()" id="newPassword" name="password" placeholder="Password">
            <label for="newPassword">Password</label>
        </div>
        <div class="form-floating">
            <input class="form-control" type="password" oninput="checkPassword()" id="confirmPassword" name="confirmPassword" placeholder="Confirm password">
            <label for="confirmPassword">Confirm password</label>
        </div>
        <input type="submit" class="btn btn-primary w-100 btn-lg" value="Sign up">
        <p>Already registered? <a href="/login">Sign in</a></p>
    </form>

    <script>
        function checkPassword() {
            let pwd1 = document.getElementById('newPassword').value;
            let pwd2 = document.getElementById('confirmPassword').value;

            let alert = document.getElementById('pwdMatch');
            if (pwd1 === '' || pwd2 === '')
                alert.hidden = true;
            else
                alert.hidden = pwd1 === pwd2;
        }
    </script>
</main>
</body>
</html>